@model IEnumerable<JoinTestimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}





<!-- Widget Start -->
 <div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Testimonial</h6>
                <div class="owl-carousel testimonial-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="testimonial-item text-center">
                            <img class="img-fluid rounded-circle mx-auto mb-4" src="@Url.Content("~/Images/" + item.userAccounts.Imagepath )" asp-append-version="true" style="width: 100px; height: 100px;" />
                            <h5 class="mb-1"> @item.userAccounts.FullName </h5>
                            <p>Profession</p>
                            <p class="mb-0">@item.testimonials.TestimonialText</p>
                            
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <iframe class="position-relative rounded w-100 h-100"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                        frameborder="0" allowfullscreen="" aria-hidden="false"
                        tabindex="0" style="filter: grayscale(100%) invert(92%) contrast(83%); border: 0;"></iframe>
            </div>
        </div>
    </div>
</div>
<!-- Widget End --> 




<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">

                <div class="table-responsive">
                    <h1>Testimonials</h1>

                    <table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.userAccounts.FullName)
            </th>

            <th>image</th>
              <th>
                 @Html.DisplayNameFor(model => model.testimonials.TestimonialText)
             </th>
            <th>
                @Html.DisplayNameFor(model => model.testimonials.TestimonialDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.testimonials.Status)
            </th>
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userAccounts.FullName)
            </td> 

             <td>
                <img src="@Url.Content("~/Images/" + item.userAccounts.Imagepath )" asp-append-version="true" width="100" height="100" />

            </td> 
             <td>
                  @Html.DisplayFor(modelItem => item.testimonials.TestimonialText)
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.testimonials.TestimonialDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.testimonials.Status)
            </td>
            <td>
                <form method="post" asp-action="Accept">
                    <div class="form-group">
                        <input type="hidden" name="id" value="@item.testimonials.Id" />
                        <input type="hidden" name="testimonialDate" value="@item.testimonials.TestimonialDate" />
                        <input type="hidden" name="testimonialText" value="@item.testimonials.TestimonialText" />
                        <input type="hidden" name="userAccountId" value="@item.testimonials.UseraccountId" />
                        <input type="submit" value="Accept" class="btn btn-success m-2" />
                    </div>
                </form>
                 <hr>
                <form method="post" asp-action="Reject">
                    <div class="form-group">
                        <input type="hidden" name="id" value="@item.testimonials.Id" />
                        <input type="hidden" name="testimonialDate" value="@item.testimonials.TestimonialDate" />
                        <input type="hidden" name="testimonialText" value="@item.testimonials.TestimonialText" />
                        <input type="hidden" name="userAccountId" value="@item.testimonials.UseraccountId" />
                        <input type="submit" value="Reject" class="btn btn-primary" />
                    </div>
                </form>
                
            </td>
        </tr>
}
    </tbody>
</table>
         </div>
            </div>
        </div>
    </div>
</div> 